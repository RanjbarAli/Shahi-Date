{
    "name": "ranjbarali/shahi-date",
    "description": "Laravel package for converting between Gregorian and Imperial Persian (Shahanshahi) calendars - پکیج لاراول برای تبدیل تاریخ میلادی به شاهنشاهی",
    "keywords": [
        "laravel",
        "persian",
        "imperial",
        "shahanshahi",
        "calendar",
        "date",
        "jalali",
        "shamsi",
        "iran",
        "shahi"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Ranjbar Jelodar",
            "email": "info@aliranjbar.ir"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5 || ^11.0",
        "orchestra/testbench": "^9.2"
    },
    "autoload": {
        "psr-4": {
            "RanjbarAli\\ShahiDate\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RanjbarAli\\ShahiDate\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "analyse": "vendor/bin/phpstan analyse src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "RanjbarAli\\ShahiDate\\ShahiDateServiceProvider"
            ],
            "aliases": {
                "Shahi": "RanjbarAli\\ShahiDate\\Facades\\Shahi"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
